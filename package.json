{
    "name": "id.gojabako.zone",
    "private": true,
    "scripts": {
        "lint": "eslint --ext .tsx,.ts,.jsx,.js,.mjs,.cjs packages",
        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.25",
        "@types/jest": "27.0.2",
        "@types/react": "17.0.30",
        "@typescript-eslint/eslint-plugin": "5.1.0",
        "@typescript-eslint/parser": "5.1.0",
        "eslint": "7.32.0",
        "eslint-config-next": "11.1.2",
        "eslint-plugin-jest": "25.2.2",
        "jest": "27.3.1",
        "lint-staged": "11.2.3",
        "next": "11.1.2",
        "npm-run-all": "4.1.5",
        "ts-jest": "27.0.7",
        "ts-node": "10.3.0",
        "typescript": "4.4.4"
    },
    "workspaces": [
        "packages/*"
    ],
    "eslintConfig": {
        "ignorePatterns": [
            "next-env.d.ts"
        ],
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "settings": {
            "next": {
                "rootDir": "packages/webui"
            }
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "@nlib/no-globals": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
