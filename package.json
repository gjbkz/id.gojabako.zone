{
    "private": true,
    "name": "id.gojabako.zone",
    "siteName": "id.gojabako.zone",
    "scripts": {
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "npx jest",
        "dev": "run-s dev:*",
        "dev:watch": "run-p dev:watch:*",
        "dev:watch:css": "esifycss --css=src/app.css --ext=.ts --watch src",
        "dev:watch:next": "node server.mjs",
        "build": "run-s build:*",
        "build:css": "esifycss --css=src/app.css --ext=.ts src",
        "build:next": "next build",
        "start": "NODE_ENV=production node server.mjs",
        "lint": "next lint"
    },
    "devDependencies": {
        "@nlib/eslint-config": "^3.17.25",
        "@nlib/githooks": "^0.1.0",
        "@types/jest": "^27.0.2",
        "@types/react": "^17.0.29",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "aws-cdk": "1.127.0",
        "esifycss": "^1.4.35",
        "esifycss-webpack-plugin": "^0.1.3",
        "eslint": "7.32.0",
        "eslint-config-next": "^11.1.2",
        "eslint-plugin-jest": "^25.0.5",
        "jest": "^27.2.5",
        "lint-staged": "^11.2.3",
        "next": "^11.1.2",
        "npm-run-all": "^4.1.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "ts-jest": "^27.0.5",
        "typescript": "4.4.4"
    },
    "browserslist": [
        ">5%",
        "not ie 11",
        "not dead"
    ],
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "next-env.d.ts"
        ],
        "overrides": [
            {
                "files": [
                    "./*.{js,mjs}"
                ],
                "rules": {
                    "@nlib/no-globals": "off"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "@nlib/no-globals": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
